<Window x:Class="InstaShare.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="InstaShare" Height="250" Width="400">  
    <Grid Margin="10">  
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Select File" Width="200" Click="SelectFile_Click"/>
            <Button Content="Select Folder" Width="200" Click="SelectFolder_Click"/>
            <Button Content="Delete Expired" Width="200" Click="DeleteExpired_Click"/>
            <TextBlock Name="SelectedPathText" Text="No file or folder selected." TextWrapping="Wrap" Margin="0,20,0,0"/>  
        </StackPanel>  
    </Grid>  
</Window>
